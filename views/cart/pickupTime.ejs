<% include ../partials/header %>
<link rel="stylesheet" href="https://unpkg.com/flatpickr/dist/flatpickr.min.css">

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1>Select Pickup Time</h1>

            <form action="/cart/pickup" method="POST">
                <div class="form-group">
                    <input id="pickupTime" name="pickupTime" class="form-control">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </form> 
        </div>
    </div>
</div>

<script type="text/javascript" src="https://unpkg.com/flatpickr@2.6.3/dist/flatpickr.min.js"></script>
<script type="text/javascript" src="https://momentjs.com/downloads/moment.js"></script>
<script type="text/javascript" src="/javascript/pickup.js"></script>
