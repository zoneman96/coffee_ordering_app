<h1>All Users</h1>
<hr>

<table class="table" id="orders">
  <thead class="thead-inverse">
    <tr>
      <th>First Name <i class="fa fa-sort" aria-hidden="true"></i></th>
      <th>Last Name <i class="fa fa-sort" aria-hidden="true"></i></th>
      <th>Email <i class="fa fa-sort" aria-hidden="true"></i></th>
      <th>Orders</i></th>
    </tr>
  </thead>
    <tbody>
      <% users.forEach(function(user){ %>
            <tr>
            <td><%= user.firstName %></td>
            <td><%= user.lastName %></td>
            <td><%= user.email %></td>
            <td><a href="/admin/users/orders/<%= user._id %>"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span></a></td>
            </tr>
      <% }) %>
    </tbody>

  <tfoot class="thead-inverse">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Orders</th>
    </tr>
  </tfoot>

</table>

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
