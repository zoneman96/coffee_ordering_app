<% include ../partials/header %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-responsive" id="product-image" src="<%= product.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <h2><%= product.name %></h2>
                        <p><%= product.description %></p>
                        <!-- Table -->
                        <table class="table">
                            <tr>
                                <th>Small</th>
                                <th>Medium</th>
                                <th>Large</th>
                            </tr>
                            <tr>
                                <td>$<%= product.size.small.price %></td>
                                <td>$<%= product.size.medium.price %></td>
                                <td>$<%= product.size.large.price %></td>
                            </tr>
                        </table>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span id="selected">Size</span> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu size">
                                <li><a href="#">Small</a></li>
                                <li><a href="#">Medium</a></li>
                                <li><a href="#">Large</a></li>
                            </ul>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Espresso Shots <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                            </ul>
                        </div>
                        <a href="/cart/<%= product._id %>" class="btn btn-primary" id="to-cart" role="button">Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>    

<script type="text/javascript" src="../javascript/show.js"></script>

<% include ../partials/footer %>